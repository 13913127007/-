<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuantu.dev.business.mapper.ProductTypeMapper">
    <select id="selectAll" resultType="com.yuantu.dev.business.entity.ProductType">
        SELECT id,`name`,icon,type,deleted,operator,create_time,modified_time,is_shelves
        FROM product_type
        WHERE deleted = 0

        <if test="type != null">
            AND type = #{type}
        </if>
        order by id
    </select>
</mapper>